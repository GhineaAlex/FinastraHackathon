<%- include('../_layouts/adminheader') %>

<h2 class="page-title"> Add a new diploma to a student</h2>
<a href="/admin/diplomas" class="btn btn-primary">Back</a>
<br><br>
<div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 1200px;">
        <form onsubmit="return App.castDiploma(event);" id="fmDiploma" method="post" action="/admin/diplomas/add-diploma" enctype="multipart/form-data">
            <label >The student is identified by his unique ID.</label>
            <div class="form-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-user"></i></span>
                    <select name="student" class="form-control">
                        <% students.forEach(function(stud) {%>
                        <option value="<%= stud.cnp %>"><%= stud.cnp %></option>
                        <% });%>
                    </select>
                </div>
            </div>
            
            <div class="form-group input-group">
                <div class="input-group-prepend"></div>
                <span class="input-group-text"> <i class="fas fa-university"></i></i></span>
                <!-- <input type="text" class="form-control" name="degree" value="<%= degree %>" placeholder="Degree"> -->
                <div class="input-mysize"><input type="text" name="degree" class="form-control"
                        placeholder="Type of diploma"></div>
            </div>

            <div class="form-group input-group">
                <div class="input-group-prepend"></div>
                <span class="input-group-text"> <i class="fas fa-university"></i></i></span>
                <div class="input-mysize"><input type="text" name="emailStudent" class="form-control"
                        placeholder="Email"></div>
            </div>

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-building"></i></span>
                </div>
                <div class="input-mysize"><input type="text" name="city" class="form-control" placeholder="City"></div>
            </div>

            <div class="form-group ">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-book"></i></span>
                    <select name="category" class="form-control">
                        <% categories.forEach(function(cat) {%>
                        <option value="<%= cat.title %>"><%= cat.title %></option>
                        <% });%>
                    </select>
                </div>
            </div>     

            <div class="form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-building"></i></span>
                    <textarea name="desc" class="form-control" cols="30" placeholder="Description"><%= desc %></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-file-image"></i></span>
                    <input type="file" class="form-control" name="document" id="document">
                    <img src="#" id="imgPreview" alt="">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-file-pdf"></i></span>
                    <input type="text" class="form-control" name="fileName" placeholder="Name of the document">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-file-image"></i></span>
                    <input type="file" class="form-control" name="file">
                </div>
            </div>

            <button class="btn btn-primary">Register the new diploma</button>
        </form>
    </article>
</div>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#document").change(function () {
        readURL(this);
    });
</script>

<%- include('../_layouts/adminfooter') %>