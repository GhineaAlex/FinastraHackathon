<%- include ('./_layouts/adminheader') %>

<div class="row diplomas">
    <% diplomas.forEach(function(p){ %>
        <div class="col-xs-12 col-md-4 p">
            <a class="pa" href="/diplomas/<%= p.category %>/<%= p.slug %>">
                <img class="pimage" src="/diploma_images/<%= p.id %>/<%= p.image %>" alt="">
            </a>
            <h3><%= p.title %></h3>
            <h4><%= parseFloat(p.price).toFixed(2) %></h4>
            <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View details</a>
        </div>
    <% });%>
</div>
<main role="main" class="container">
    <div class="col-xs-12 col-md-3">
        <h3>Categories</h3>
        <ul class="list-group">
          <li class="list-group-item"><a href="/products">All products</a></li>
          <% categories.forEach(function(c) { %>
            <li class="list-group-item"><a href="/products/<%= c.slug %>"><%= c.title %></a></li>
          <% });%>
    
        </ul>
    </div>


<%- include ('./_layouts/footer') %>