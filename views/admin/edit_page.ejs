<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Editeaza o pagina </h2>
<a href="/admin/pages" class="btn btn-primary">Inapoi la toate paginile</a>
<br><br>

<form method="post" action="/admin/pages/edit-page/<%= slug %>">
	<div class="form-group">
		<label for="">Titlu</label>
		<input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
	</div>

	<div class="form-group">
		<label for="">Descriere scurta</label>
		<input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
	</div>

	<div class="form-group">
		<label for="">Continut</label>
		<textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
	</div>
    <input type="hidden" name="id" value="<%= id %>">
	<button class="btn btn-default"> Editeaza pagina</button>
</form>

<%- include('../_layouts/adminfooter') %>