<%- include('../_layouts/adminheader') %>

<h2 class="page-title"> Adauga o noua pagina</h2>
<a href="/admin/pages" class="btn btn-primary">Inapoi la pagini</a>
<br><br>

<form method="post" action="/admin/pages/add-page">\
	<div class="form-group">
		<label for="">Titlu</label>
		<input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
	</div>

	<div class="form-group">
		<label for="">Scurta descriere</label>
		<input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
	</div>

	<div class="form-group">
		<label for="">Continut</label>
		<textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
	</div>

	<button class="btn btn-default"> Inregistreaza o noua pagina</button>
</form>

<%- include('../_layouts/adminfooter') %>