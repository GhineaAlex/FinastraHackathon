<%- include('../_layouts/adminheader') %>

<h2 class="page-title"> Categorii </h2>
<a href="/admin/categories/add-category" class="btn btn-primary">Adauga o noua categorie</a>
<br><br>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Categorie</th>
        <th>Edit</th>
        <th>Sterge</th>
    </tr>
    </thead>
    <tbody>
    <% categories.forEach(function(cat){ %>
        <tr>
            <td><%= cat.title %></td>
            <td><a href="/admin/categories/edit-category/<%= cat.slug %>">Edit</a></td>
            <td><a class="confirmDeletion" href="/admin/categories/delete-category/<%= cat._id %>">Sterge</a></td>
        </tr>
    <% }); %>
    </tbody>

</table>

<%- include('../_layouts/adminfooter') %>