<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Editeaza o categorie </h2>
<a href="/admin/categories" class="btn btn-primary">Inapoi la toate categoriile</a>
<br><br>

<form method="post" action="/admin/categories/edit-category/<%= slug %>">
	<div class="form-group">
		<label for="">Titlu</label>
		<input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
	</div>

	<div class="form-group">
		<label for="">Descriere scurta</label>
		<input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
	</div>

    <input type="hidden" name="id" value="<%= id %>">
	<button class="btn btn-primary"> Editeaza categoria</button>
</form>

<%- include('../_layouts/adminfooter') %>